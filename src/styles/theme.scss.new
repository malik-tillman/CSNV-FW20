#loader {
  @include flexbox();
  @include justify-content(center);
  @include align-items(center);

  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;

  background-color: white;

  opacity: 1;
  transition: opacity 1500ms ease-out;

  pointer-events: none;

  z-index: 25;

  //display: none;
}

#loader-image {
  height: 54px;
  pointer-events: none;
}



// GDPR Disclaimer
#disclaimer__container {
  @include flexbox();
  @include justify-content(center);
  @include align-items(center);
  @include flex-direction(column);

  width: 100vw;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  background-color: transparent;
  z-index: 1000;
  text-align: center;

  color: white;

  opacity: 0;
  display: none;
  transition: opacity 1s ease;

  backdrop-filter: blur(10px);
}

.disclaimer--background {
  position: absolute;
  background-image: url("https://cdn.shopify.com/s/files/1/0305/3132/1995/files/scanlines.jpg?v=1585817492");
  background-size: cover;

  width: 100%;
  height: 100%;
  z-index: -1000;

  opacity: .5;


  animation: shake 1s;
  animation-iteration-count: infinite;
}

@keyframes shake {
  0% { transform: translate(0px, 1px) }
  10% { transform: translate(0px, -2px) }
  20% { transform: translate(0px, 0px) }
  30% { transform: translate(0px, 2px) }
  40% { transform: translate(0px, -1px) }
  50% { transform: translate(0px, 2px) }
  60% { transform: translate(0px, 1px) }
  70% { transform: translate(0px, 1px) }
  80% { transform: translate(0px, -1px) }
  90% { transform: translate(0px, 2px) }
  100% { transform: translate(0px, -2px) }
}

.disclaimer--text__container {
  background-color: black;

  padding: 2em;
}

.disclaimer--title,
.disclaimer--body__container,
.disclaimer--accept {
  margin: 1em 1.5em;
  z-index: 1000;
}

.disclaimer--title {
}

.disclaimer--body__container {
  font-size: .5em;
}

.disclaimer--accept {
  width: 30%;
  margin-top: 3em;
  padding: .5em;
  font-weight: bolder;

  color: #101010;
  background-color: white;
  transition: width 700ms ease-in-out,
  color 500ms ease-in-out,
  background-color 200ms ease-out;
}

.disclaimer--accept:hover {
  width: 35%;
  color: white;
  background-color: #ff4040;
}

.disclaimer--csnv {
  font-size: 2em;
  font-weight: bolder;
}

.disclaimer--title {
  font-size: 1.5em;
}
