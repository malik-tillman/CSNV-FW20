  {
    "name": "Products Page",
    "settings": [
      {
        "content": "Collection Heading",
        "type": "header"
      },
      {
        "type": "select",
        "id": "products_heading_media_type",
        "options": [
          { "value":  "image", "label": "Image Heading" },
          { "value":  "video", "label": "Video Heading" }
        ],
        "label": "Heading Media Type",
        "info": "The media type for the products page heading."
      },
      {
        "type": "image_picker",
        "id": "collection_heading_image",
        "label": "Image for Collection Heading"
      },
      {
        "type": "text",
        "id": "collection_heading_image_fallback",
        "label": "Fallback Image URL for Collection Heading"
      },
      {
        "type": "video_url",
        "id": "collection_heading_video",
        "label": "Video for Collection Heading",
        "accept": ["youtube", "vimeo"]
      },
      {
        "type": "text",
        "id": "collection_heading_video_fallback",
        "label": "Fallback Video URL for Collection Heading"
      },
      {
        "content": "Glitch",
        "type": "header"
      },
      {
        "type": "select",
        "id": "products_glitch_blend",
        "options": [
          { "value":  "color", "label": "Color" },
          { "value":  "color-burn", "label": "Color Burn" },
          { "value":  "color-dodge", "label": "Color Dodge" },
          { "value":  "darken", "label": "Darken" },
          { "value":  "difference", "label": "Difference" },
          { "value":  "exclusion", "label": "Exclusion" },
          { "value":  "hard-light", "label": "Hard Light" },
          { "value":  "hue", "label": "Hue" },
          { "value":  "lighten", "label": "Lighten" },
          { "value":  "luminosity", "label": "Luminosity" },
          { "value":  "multiply", "label": "Multiply" },
          { "value":  "normal", "label": "Normal" },
          { "value":  "overlay", "label": "Overlay" },
          { "value":  "saturation", "label": "Saturation" },
          { "value":  "screen", "label": "Screen" },
          { "value":  "soft-light", "label": "Soft Light" }
        ],
        "label": "Blend Mode",
        "info": "Blend mode for product page glitch effect."
      },
      {
        "type": "range",
        "id": "products_glitch_alpha_min",
        "min": 0,
        "max": 500,
        "step": 10,
        "label": "Alpha Glitch Minimum",
        "default": 50
      },
      {
        "type": "range",
        "id": "products_glitch_alpha_max",
        "min": 0,
        "max": 500,
        "step": 10,
        "label": "Alpha Glitch Maximum",
        "default": 250
      },
      {
        "type": "range",
        "id": "products_glitch_omega_min",
        "min": 0,
        "max": 500,
        "step": 10,
        "label": "Omega Glitch Minimum",
        "default": 10
      },
      {
        "type": "range",
        "id": "products_glitch_omega_max",
        "min": 0,
        "max": 500,
        "step": 10,
        "label": "Omega Glitch Maximum",
        "default": 150
      }
    ]
