[
  {
    "name": "theme_info",
    "theme_name": "World Is Yours 2020",
    "theme_version": "1.0.0",
    "theme_author": "Malik Tillman",
    "theme_documentation_url": "https://github.com/malik-tillman/The-World-is-Yours",
    "theme_support_url": "https://maliktillman.com/"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "content": "Main Colors",
        "type": "header",
        "info": "Colors for layouts, backgrounds, and other main elements"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background Color",
        "default": "#ffffff",
        "info": "Color for page's background."
      },
      {
        "type": "color",
        "id": "color_primary_font",
        "label": "Primary Color",
        "default": "#000000",
        "info": "Primary text color."
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border Color",
        "default": "#111111",
        "info": "Default color for borders."
      },
      {
        "type": "color",
        "id": "color_products_background",
        "label": "Products Background Color",
        "default": "#F3EEF2",
        "info": "Color for product image backgrounds."
      },
      {
        "content": "Text Colors",
        "type": "header",
        "info": "Colors for text properties."
      },
      {
        "type": "color",
        "id": "color_body_text",
        "label": "Body Text",
        "default": "#111111",
        "info": "Color for body text."
      },
      {
        "content": "Form Colors",
        "type": "header",
        "info": "Colors for forms."
      },
      {
        "type": "color",
        "id": "color_form_disabled",
        "label": "Disabled",
        "default": "#000000",
        "info": "Color for disabled form state."
      },
      {
        "type": "color",
        "id": "color_form_disabled_border",
        "label": "Disabled Border",
        "default": "#000000",
        "info": "Color for border of disabled form state."
      },
      {
        "type": "color",
        "id": "color_form_error",
        "label": "Error",
        "default": "#000000",
        "info": "Color for form error state."
      },
      {
        "type": "color",
        "id": "color_form_error_background",
        "label": "Error Background",
        "default": "#000000",
        "info": "Color for form error state's background."
      },
      {
        "type": "color",
        "id": "color_form_success",
        "label": "Success",
        "default": "#000000",
        "info": "Color for form success state."
      },
      {
        "type": "color",
        "id": "color_form_success_background",
        "label": "Success Background",
        "default": "#000000",
        "info": "Color for form success state's background."
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "content": "Primary (Defaults)",
        "type": "header",
        "info": "Default typography settings."
      },
      {
        "type": "range",
        "id": "typo_primary_font_size",
        "min": 8,
        "max": 24,
        "step": 1,
        "unit": "px",
        "label": "Font Size",
        "default": 16
      },
      {
        "type": "font_picker",
        "id": "typo_primary_font",
        "label": "Primary Font",
        "default": "helvetica_n4"
      },
      {
        "type": "font_picker",
        "id": "typo_primary_font_fallback",
        "label": "Primary Font Fallback",
        "default": "helvetica_n4",
        "info": "This is the fallback font for primary fonts. If the primary font selected above is not available on the client system, we will attempt to use this font. (note: by default this will fallback to the primary font, so if primary font is not availible this will not either. Change it to a new font to have safer web fonts.)"
      },
      {
        "type": "select",
        "id": "typo_primary_font_generic",
        "label": "Primary Generic Font",
        "options": [
          { "value": "Serif", "label": "Serif" },
          { "value": "Sans-serif", "label": "Sans-serif" },
          { "value": "Monospace", "label": "Monospace" }
        ],
        "default": "Sans-serif",
        "info": "A generic web font is a font that will be used in the extreme case that the two above selected fonts are not available on the client machine."
      },
      {
        "type": "select",
        "id": "typo_primary_weight",
        "label": "Font Weight",
        "options": [
          {
            "value": "lighter",
            "label": "Lighter"
          },
          {
            "value": "normal",
            "label": "Normal"
          },
          {
            "value": "bold",
            "label": "Bold"
          },
          {
            "value": "bolder",
            "label": "Bolder"
          }
        ],
        "info": "The thinness or thickness of a font."
      },
      {
        "type": "range",
        "id": "typo_primary_line_height",
        "min": 0,
        "max": 5,
        "step": 0.1,
        "label": "Line Height",
        "default": 1.4
      },
      {
        "type": "select",
        "id": "typo_primary_letter_spacing",
        "options": [
          { "value": "0.00", "label":  "None"},
          { "value": "0.01", "label":  "Very Small (.01)"},
          { "value": "0.03", "label":  "Small (.03)"},
          { "value": "0.05", "label":  "Normal (.05)"},
          { "value": "0.07", "label":  "Large (.07)"},
          { "value": "0.10", "label":  "Very Large (.1)"}
        ],
        "label": "Letter Spacing",
        "default": "0.05"
      },
      {
        "content": "Products Page",
        "type": "header"
      },
      {
        "type": "range",
        "id": "typo_product_title_size",
        "min": 0.1,
        "max": 5,
        "step": 0.1,
        "unit": "em",
        "label": "Font Size",
        "default": 2
      }
    ]
  },
