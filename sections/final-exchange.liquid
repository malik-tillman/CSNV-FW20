    "type": "text",
    "id": "title",
    "label": "Title",
    "placeholder": "Ex. \"The Final Exchange F/W 2020\""
    },
    {
    "type": "text",
    "id": "text1",
    "label": "First Text"
    },
    {
    "type": "text",
    "id": "text2",
    "label": "Second Text"
    },
    {
    "type": "text",
    "id": "text3",
    "label": "Third Text"
    },
    {
    "type": "text",
    "id": "text4",
    "label": "Fourth Text"
    },
    {
    "type": "text",
    "id": "text5",
    "label": "Fifth Text"
    }
    ],
    "presets":[
    {
    "name": "The Final Exchange",
    "category": "Image",
    "settings":{}
    }
    ]
    }
{% endschema %}
