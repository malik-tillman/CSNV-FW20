<div class="final-exchange__container">
    <div class="final-exchange__text-container">
        <p class="final-exchange__text first">{{ section.settings.text1 }}</p>
        <p class="final-exchange__text second">{{ section.settings.text2 }}</p>
        <p class="final-exchange__text third">{{ section.settings.text3 }}</p>
        <p class="final-exchange__text fourth">{{ section.settings.text4 }}</p>
        <p class="final-exchange__text fifth">{{ section.settings.text5 }}</p>
        <h2 class="final-exchange__text final-exchange__title">{{ section.settings.title }}</h2>
    </div>
    <img class="final-exchange__image" src="{{ section.settings.image | img_url:'master' }}" alt="The Final Exchange Image">
</div>

