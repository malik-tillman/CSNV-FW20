/* ---------- Rich Text Editor ---------- */
.rte {
  /* Image Height Reset */
  img {
    height: auto;
  }

  /* Fixed Table Layout Reset */
  table {
    table-layout: fixed;
  }

  /* Ordered/Unordered List Margin Reset */
  ul,
  ol {
    margin: 0;
  }

  /* Match the Styles from Rich Text Editor Nested Lists */
  ul {
    list-style: disc outside;

    ul {
      list-style: circle outside;

      ul { list-style: square outside; }
    }
  }
}

/* Text Center Alignment Reset */
.text-center.rte,
.text-center .rte {
  ul,
  ol {
    margin-left: 0;
    list-style-position: inside;
  }
}

/* Table Scroll Reset */
.rte-table {
  max-width: 100%;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

