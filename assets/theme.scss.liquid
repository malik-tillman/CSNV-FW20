*                                          Specific css resets                                                         *
***********************************************************************************************************************/

/*
* Reset Box-Sizing for All Elements
*/
*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/*
* Font Reset for Webkit
*/
html,
body,
input,
textarea,
button,
select {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  -webkit-text-size-adjust: 100%;
}

/*
* Remove Pop Out Mini-player for Opera 39+
*/
body + div[is-visible] {
  display: none !important;
}

/*
* Remove Outline on Link and Button Select
*/
a:focus, button:focus {
  color: inherit;
  outline: none;
  -webkit-tap-highlight-color: transparent !important;
}

/*
* Fill Image Width
*/
img {
  max-width: 100%;
}

/* Form Margins Reset */
form {
  margin: 0;
}

/* Reset Cursor on Buttons, Submit Inputs, and Labels */
button,
input[type="submit"],
label[for] {
  cursor: pointer;
}

/* Reset Option Group Font Weight | Dropdown Menu */
optgroup {
  font-weight: $font-weight-bold;
}

/* Reset Option Color | Dropdown Menu */
